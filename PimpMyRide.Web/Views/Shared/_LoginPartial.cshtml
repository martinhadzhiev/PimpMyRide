@using Microsoft.AspNetCore.Identity
@using PimpMyRide.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User) <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Manage</a></li>
            <li><a asp-area="" asp-controller="Orders" asp-action="List">My Cart</a></li>
            <li><a asp-area="" asp-controller="Orders" asp-action="MyOrders">My Orders</a></li>
        </ul>
    </li>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
